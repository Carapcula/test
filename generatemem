import discord
from discord.ext import commands
import random
import os
import asyncio
os.chdir(os.path.dirname(__file__))
f = open(r'C:\kurs\bot\token.txt', "r")
token = f.read()
f.close()
prefix = "!"
emoji = "ü§£"
emoji2 = "üòÇ"
emojifinal = random.randint(1,2)
if emojifinal == 1:
    emojifinal = "ü§£"
if emojifinal == 2:
    emojifinal = "üòÇ"
intents = discord.Intents.all()
bot = commands.Bot(prefix, intents=intents)
@bot.command()
async def mem(ctx, number = None):    
    await ctx.message.add_reaction(emojifinal)
    if number == None:
        number = random.randint(1,3)
    with open(f'mem{number}.jpg', 'rb') as f:
        # –í –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –∫–ª–∞–¥–µ–º —Ñ–∞–π–ª, –∫–æ—Ç–æ—Ä—ã–π –ø—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç—Å—è –≤ —Ñ–∞–π–ª –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ Discord!
        picture = discord.File(f)
   # –ú–æ–∂–µ–º –ø–µ—Ä–µ–¥–∞–≤–∞—Ç—å —Ñ–∞–π–ª –∫–∞–∫ –ø–∞—Ä–∞–º–µ—Ç—Ä!
    message = await ctx.reply(file=picture)
    await asyncio.sleep(10)
    await ctx.message.delete()
    await message.delete()
bot.run(token)
